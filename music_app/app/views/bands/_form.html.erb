<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% the_method = band.persisted? ? "PATCH" : "POST"%>
<% submitted = band.persisted? ? "Update the Band" : "Create your Band" %>
<form action=<%= action_url %> method="POST" >
    <input type="hidden" name="_method" value="<%= the_method %>" >
    <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
    <label for="bandname" >name</label>
    <input id="bandname" type="text" name="band[name]" value="<%= band.name %>">
    <input type="submit" value="<%= submitted %>">
</form>